extends ../layout.pug

block content
    #chat-container
        #chat-box
            h1 This is a chat Box 
            form#chat-form(action="/", method="POST")
                textarea.overflow-scroll.border.border-gray-300(name="contents", cols="50", rows="20") 
                input.px-3.py-2.border.border-gray-300(type="text", name="msg", placeholder="Message here")
                button(type="submit") Send

block scripts
    script(src="https://cdn.socket.io/socket.io-1.0.0.js" type="text/javascript")
    script.
        const io = require("socket.io-client");
        const socket = io("ws://localhost");

        console.log(socket.id); // undefined

        socket.on("connect", () => {
            console.log(socket.id); // "G5p5..."
        });

        socket.emit("msg", { msg: "Message from client" });
